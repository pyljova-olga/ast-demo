.Cart
    .Cart-order.Order(*ngFor='let order of orders')
        .Order-header.Pointer(
            cart-order-header,
            [isOpen]='order.id === openedOrder',
            (click)='toggleOrder(order.id)')
        .Order-body(*ngIf='order.id === openedOrder')
            .Plantation(
                [class.Plantation--opened]='plantation.id === openedPlantation',
                *ngFor='let plantation of order.plantations'
            )
                .Plantation-header.Pointer(
                    cart-plantation,
                    [isOpen]='plantation.id === openedPlantation',
                    (click)='togglePlantation(plantation.id)')
                .Plantation-body(*ngIf='plantation.id === openedPlantation')
                    .Plantation-type Solid
                    .Plantation-item(cart-item)
                    .Plantation-item(cart-item)
                    .Plantation-item(cart-item)
                    .Plantation-item(cart-item)
                    .Plantation-item(cart-item)

                    .Plantation-type Mix
                    .Plantation-item(cart-item)
                    .Plantation-item(cart-item)
                    .Plantation-item(cart-item)
                    .Plantation-item(cart-item)
                    .Plantation-item(cart-item)

        .Order-footer(*ngIf='order.id === openedOrder')
            .Order-sum Итого: 124$
            .Order-submit
                button(
                    mat-flat-button,
                    color='primary',
                    type='button'
                ) Отправить запрос


